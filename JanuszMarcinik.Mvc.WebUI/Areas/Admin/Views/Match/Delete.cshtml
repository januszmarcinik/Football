@using JanuszMarcinik.Mvc.WebUI.Areas.Admin.Models.Seasons;
@model SeasonViewModel

@{
    ViewBag.Title = "Usuwanie";
}

<h3>@ViewBag.Title</h3>
<h4>Czy na pewno chcesz usunąć sezon?</h4>
<hr />

@using (var form = Html.Bootstrap().Begin(new Form()))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.SeasonId)

    @form.FormGroup().TextBoxFor(x => x.Years).Readonly(true)

    <div class="btn-group">
        @Html.Bootstrap().BackButton(MVC.Admin.Seasons.Index())
        @Html.Bootstrap().SubmitDeleteButton()
    </div>
}